<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sarked.myapp2.MainActivity">

    <ScrollView
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:paddingTop="10dp"
                android:layout_height="70dp"
                android:layout_width="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/anchor"
                android:gravity="center">
            </ImageView>
            <TextView
                style="@style/MainText"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="@string/form_name"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="22dp"
                    android:paddingRight="5sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/man"
                    >
                </ImageView>
                    <TextView
                        style="@style/Paragraph"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/fio"/>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/first_name"></EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name"></EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/patronymic"></EditText>

            <LinearLayout
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="22dp"
                    android:paddingRight="5sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/man">
                </ImageView>
                <TextView
                    style="@style/Paragraph"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/personal_data"/>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/age"></EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/city"></EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:hint="@string/tel"></EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="@string/mail"></EditText>
            <LinearLayout
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="22dp"
                    android:paddingRight="5sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/lock">
                </ImageView>
                <TextView
                    style="@style/Paragraph"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/set_password"/>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:password="true"
                android:hint="@string/password"></EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:password="true"
                android:hint="@string/rep_password"></EditText>
            <LinearLayout
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingRight="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/mail">
                </ImageView>
                <TextView
                    style="@style/Paragraph"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/mailing"/>
            </LinearLayout>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingTop="5dp"
                android:text="@string/text_mailing"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/once_day"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/four_week"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/once"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/twice_month"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/once_month"/>
            </RadioGroup>

            <LinearLayout
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingRight="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/thumbs_up">
                </ImageView>
                <TextView
                    style="@style/Paragraph"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/confirm"/>
            </LinearLayout>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/ageconfirm"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/text_confirm"/>
        <GridLayout
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Регистрация"/>

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="8"
                android:text="Вернуться" />
        </GridLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
